<%= render 'shared/errors', resource: @question %>

<h3><%= question_header(@question) %></h3>
<%= form_with model: [:admin, @test, @question] do |form| %>
  <%= form.label :body %>
  <%= form.text_area :body, size: "50x10" %>
  <%= form.submit %>
<% end %>
<%= link_to 'To questions list', admin_tests_path(@question.test) %>
