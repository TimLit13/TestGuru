<h3>Question</h3>
<p><%= @question.body %></p>

<h4>Answers</h4>
<%= link_to 'New answer', new_admin_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<%= link_to 'Edit', edit_admin_question_path(@question) %> |
<%= link_to 'Delete', admin_question_path(@question), 
                      method: :delete,
                      data: { confirm: "Are you sure to delete #{@question.body} question?" 
                      } %>