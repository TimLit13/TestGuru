<tr>    
  <td>
    <%= image_tag( badge.image_url , alt: t('.alt_image_tag'))  %>
  </td>
  <td>
    <%= badge.title %>
  </td>
  <td>
    <%= link_to t('.show'), admin_badge_path(badge), class: "btn btn-sm btn-outline-success" %>
    <%= link_to t('.edit'), edit_admin_badge_path(badge), class: "btn btn-sm btn-outline-warning form-inline-link", data: { badge_id: badge.id } %>
    <%= link_to t('.delete'), admin_badge_path(badge), method: :delete, data: { confirm: t('.confirmation') }, class: "btn btn-sm btn-outline-danger" %>
  </td>
</tr>