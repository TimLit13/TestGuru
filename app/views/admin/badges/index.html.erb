<h3 class="text-center mt-5"><%= t('.header') %></h3>

<div>
  <%= link_to t('.new_badge'), new_admin_badge_path, class: "btn btn-outline-success" %>
</div>

  <%= render 'shared/errors', resource: @badge %>

<div class="container">
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th scope="col" class="col-md-5 pointer">
          <%= t('.badge') %>
          </th>
        <th scope="col" class="col-md-3"><%= t('.badge_title') %></th>
        <th scope="col" class="col-md-4 text-center"><%= t('.actions') %></th>
      </tr>
    </thead>

    <tbody>
        <%= render @badges %>
    </tbody>
  </table>
</div>

<div>
  <%= octicon 'mortar-board', class: 'text-danger', width: 100 %>
  <%= octicon 'trophy', class: 'text-danger', width: 100  %>
  <%= octicon 'star-fill', class: 'text-danger', width: 100  %>
  <%= octicon 'star', class: 'text-danger', width: 100  %>
  <%= octicon 'ruby', class: 'text-danger', width: 100  %>
</div>
