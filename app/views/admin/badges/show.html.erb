<h3><%= t('.badge_header')%></h3>

<div class="card">
  <div class="card-header">
    <h4><%= @badge.title %></h4>
  </div>
  <div class="card-body">
      <div class="mt-3">
        <%= @badge.rule %>
      </div>
      <div class="mt-3">
        <%= octicon @badge.image_url, class: 'text-danger', width: 200   %>
      </div>
  </div>
  <div class="card-footer text-muted"> 
    <%= link_to t('.edit'), edit_admin_badge_path(@badge), class: "btn btn-outline-warning" %>
    <%= link_to t('.back'), admin_badges_path, class: "btn btn-outline-secondary" %>
  </div>
