<h3 class="text-center mt-5"><%= t('.header') %></h3>

<div>
  <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-outline-success" %>
</div>

  <%= render 'shared/errors', resource: @test %>

<div class="container">
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th scope="col" class="col-md-5 sort-by-title pointer">
          <%= t('.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide mt-1' %>
          <%= octicon 'arrow-down', class: 'text-success hide mt-1' %>  
          </th>
        <th scope="col" class="col-md-3"><%= t('.questions_number') %></th>
        <th scope="col" class="col-md-4 text-center"><%= t('.actions') %></th>
      </tr>
    </thead>

    <tbody>
        <%= render @tests %>
    </tbody>
  </table>
</div>
