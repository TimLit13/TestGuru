<h3><%= t('.test_name') %> <%= @test.title %></h3>
<div>
  <p><%= t('.time_for_test', timer: @test.timer)%></p>
</div>

<%= link_to t('.add_new_question'), new_admin_test_question_path(@test) %> 

<table>
  <thead>
    <tr>
      <th><%= t('.title') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'admin/questions/question', collection: @test.questions %>
  </tbody>
</table>


<%= link_to t('.back'), admin_tests_path %> |
<%= link_to t('.edit'), edit_admin_test_path(@test) %> |
<%= link_to t('.delete'), admin_test_path(@test), method: :delete, data: { confirm: t('.confirmation') } %>

<br>
