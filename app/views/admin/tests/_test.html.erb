<tr>  
  <td>
    <%= test.title %>
  
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  
  <td><%= questions_count(test) %></td>
  <td>
    <%= link_to t('.show'), admin_test_path(test), class: "btn btn-sm btn-outline-success" %>
    <%= link_to t('.edit'), edit_admin_test_path(test), class: "btn btn-sm btn-outline-warning" %>
    <%= link_to t('.delete'), admin_test_path(test), method: :delete, data: { confirm: t('.confirmation') }, class: "btn btn-sm btn-outline-danger" %>
  </td>
</tr>