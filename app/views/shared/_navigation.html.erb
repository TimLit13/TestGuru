<div class="navbar navbar-expand-lg navbar-dark bg-dark rounded">
  <div class="container">
    <%= link_to t('.app_name'), tests_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to t('.contact_us'), contact_us_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t('.my_achievements'), badges_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t('.badges'), badges_path, class: "nav-link" %>
        </li>
      </ul>
    </div>  
    <div class="navbar-text">
      <% if user_signed_in? %>
        <%= content_tag :i, t('.welcome', email: current_user.email)%>

        <% if current_user.admin? %>
          <%= link_to t('.admin_panel'), admin_tests_path, class: "btn btn-outline-info text-info" %>
        <% end %>

        <%= link_to t('.log_out'), destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary text-secondary" %>
      <% else %>
        <%= link_to t('.sign_up'), new_user_registration_path, class: "btn btn-outline-secondary text-light"%>
        <%= link_to t('.log_in'), new_user_session_path, class: "btn btn-outline-secondary text-light" %>
      <% end %>
    </div>
  </div>
</div>